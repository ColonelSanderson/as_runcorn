                                         :title => t('managed_registration.sections.withdrawn')) %>
    <%= sidebar.render_for_view_and_edit(:subrecord_type => 'submitted', :property => :none, :anchor => 'submitted',
                                         :title => t('managed_registration.sections.submitted')) %>
    <%= sidebar.render_for_view_and_edit(:subrecord_type => 'approved', :property => :none, :anchor => 'approved',
                                         :title => t('managed_registration.sections.approved')) %>

<% end %>
