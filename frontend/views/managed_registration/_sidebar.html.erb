<%= render(:layout => '/shared/sidebar',
           :locals => {
             :record_type => 'agency_registrations',
             :record => {},
             :suppress_basic_information => true,
             :suppress_submit_buttons => true,
           }) do |sidebar| %>

    <%= sidebar.render_for_view_and_edit(:subrecord_type => 'draft', :property => :none, :anchor => 'draft',
                                         :title => t('managed_registration.sections.draft')) %>
