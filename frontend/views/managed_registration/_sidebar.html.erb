<%= render(:layout => '/shared/sidebar',
           :locals => {
             :record_type => 'agency_registrations',
             :record => {},
             :suppress_basic_information => true,
             :suppress_submit_buttons => true,
           }) do |sidebar| %>

    <% @sections.each do |section| %>
      <%= sidebar.render_for_view_and_edit(:subrecord_type => section,
                                           :property => :none,
                                           :anchor => section,
                                           :title => t("managed_registration.sections.#{section}")) %>
    <% end %>

<% end %>
