<% render_aspace_partial :partial => "physical_representations/template" %>

<section id="<%= section_id %>" class="subrecord-form-dummy">
  <h3><%= I18n.t("physical_representation._plural") %></h3>
  <div class="panel-group details" id="<%= section_id %>_accordion">
  <% physical_representations.each_with_index do |physical_representation, ix| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row accordion-toggle collapsed"
               data-toggle="collapse"
               data-parent="#<%= section_id %>_accordion"
               href="#<%= section_id %>_physical_representation_<%= ix %>">
            <div class="col-md-1">
              <span class="glyphicon"></span>
            </div>
            <div class="col-md-1">
              <%= QSAIdHelper.id(physical_representation['qsa_id_prefixed']) %>
            </div>
            <div class="col-md-5">
              <%= physical_representation['title'] %>
            </div>
            <div class="col-md-3">
              <%= physical_representation['format'] %>
            </div>
            <div class="col-md-2">
              <%= I18n.t('enumerations.runcorn_location.' + physical_representation['current_location']) %>
            </div>
          </div>
        </div>
        <div id="<%= section_id %>_physical_representation_<%= ix %>" class="panel-collapse collapse">
          <div class="subrecord-form-container">
            <% context.push("physical_representation", physical_representation) do |context| %>
              <% context.emit_template("physical_representation") %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
