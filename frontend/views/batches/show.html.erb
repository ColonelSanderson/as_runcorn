<%= setup_context :object => @batch, :title => @batch.display_string %>

<div class="row">
  <div class="col-md-3">
    <%= render_aspace_partial :partial => "sidebar" %>
  </div>
  <div class="col-md-9">
    <%= render_aspace_partial :partial => "toolbar" %>
    <div class="record-pane">
      <%= readonly_context :batch, @batch do |readonly| %>
        <h2><%= @batch.display_string %>  <span class="label label-info"><%= I18n.t("batch._singular") %></span></h2>
        <%= render_aspace_partial :partial => "form", :locals => { :form => readonly } %>

        <%= render_aspace_partial :partial => "batches/linked_objects", :locals => { :id => @batch.id } %>
      <% end %>
    </div>
  </div>
</div>
