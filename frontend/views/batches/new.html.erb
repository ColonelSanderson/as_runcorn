<%= setup_context :object => @batch %>

<%= form_for @batch, :as => "batch", :url => {:action => :create}, :html => {:class => 'form-horizontal aspace-record-form'} do |f| %>
  <%= form_context :batch, @batch do |form| %>
    <div class="row">
      <div class="col-md-3">
        <%= render_aspace_partial :partial => "sidebar" %>
      </div>
      <div class="col-md-9">
        <%= render_aspace_partial :partial => "shared/toolbar_new_objects" %>
        <div class="record-pane">
          <%= link_to_help :topic => "batch" %>
          <h2><%= I18n.t("actions.new_prefix") %> <%= I18n.t("batch._singular") %>  <span class="label label-info"><%= I18n.t("batch._singular") %></span></h2>
          <br/>
          <%= render_aspace_partial :partial => "batches/form", :locals => {:form => form} %>
          <div class="form-actions">
            <div class="btn-group">
              <button type="submit" class="btn btn-primary"><%= I18n.t("actions.save_prefix") %></button>
            </div>
            <%= link_to I18n.t("actions.cancel"), :back, :class => "btn btn-cancel btn-default" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<%= javascript_include_tag("subrecord.crud") %>
<%= javascript_include_tag("form") %>
