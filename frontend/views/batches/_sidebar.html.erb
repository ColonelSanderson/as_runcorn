<%= render(:layout => '/shared/sidebar',
           :locals => {
               :record_type => 'batch',
               :record => @batch,
           }) do |sidebar| %>

      <% if (@batch.object_count && @batch.object_count > 0) || @batch.actions.length > 0 %>
        <%= sidebar.render_for_view_and_edit(:subrecord_type => 'current_action', :property => :none) %>
        <%= sidebar.render_for_view_only(:subrecord_type => 'action_history', :property => :none) %>
      <% end %>

      <%= sidebar.render_for_view_only(:subrecord_type => 'batch_assigned_objects', :property => :none) %>
<% end %>
