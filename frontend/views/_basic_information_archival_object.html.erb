<%= form.label_and_textarea "description" %>
<%= form.label_and_select "accessioned_status", form.possible_options_for("accessioned_status", true) %>
<%= form.label_and_select "access_clearance_procedure", form.possible_options_for("access_clearance_procedure", true) %>

<%= form.label_and_boolean "archivist_approved" %>
<%= form.label_and_date "approval_date" %>
<% if form.readonly? %>
  <% if form['approved_by']  %>
    <div class="form-group">
      <div class="control-label col-sm-2"><%= I18n.t("archival_object.approved_by") %></div>
      <div class="controls token-list col-sm-10">
        <% ASUtils.wrap(form['approved_by']).each do |record| %>
          <%= render_token :object => record['_resolved'],
                           :label => record['_resolved']['title'] || record['_resolved']['display_string'],
                           :type => record['_resolved']['jsonmodel_type'],
                           :uri => record['ref'],
                           :placement => "top" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <% form.push("approved_by", form.obj["approved_by"] || {}) do %>
    <div class="form-group">
      <%= form.label('approved_by', {:for => 'approved_by_linker'}, ['col-sm-2']) %>
      <div class="col-sm-9">
        <div class="form-group required">
          <div class="input-group linker-wrapper">
            <input type="text" class="linker"
                   id="approved_by_linker"
                   data-label="<%= I18n.t("archival_object.approved_by") %>"
                   data-label_plural="<%= I18n.t("archival_object.approved_by") %>"
                   data-path="<%= form.path %>"
                   data-name="ref"
                   data-url="<%= url_for :controller => :search, :action => :do_search, :format => :json %>"
                   data-browse-url="<%= url_for :controller => :search, :action => :do_search, :format => :js, :facets => [], :display_identifier => true %>"
                   data-selected="<%= ASUtils.to_json(form.obj['_resolved'] || {}) %>"
                   data-format_property="display_string"
                   data-multiplicity="one"
                   data-types='["agent_with_user"]'
              />
            <div class="input-group-btn">
              <a class="btn btn-default dropdown-toggle last" data-toggle="dropdown" href="javascript:void(0);"><span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="javascript:void(0);" class="linker-browse-btn"><%= I18n.t("actions.browse") %></a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<%= form.label_and_textfield "disposal_class" %>
<%= form.label_and_select "sensitivity_label", form.possible_options_for('sensitivity_label', true) %>
<%= form.label_and_textarea "previous_system_identifiers" %>
<%= form.label_and_textfield "agency_assigned_id" %>

<% if form.readonly? %>
  <% if form.obj['significance'] %>
    <div class="form-group">
      <div class="control-label col-sm-2"><%= I18n.t("archival_object.significance") %></div>
      <div class="controls col-sm-10">
        <%= SignificanceHelper.display(form.obj['significance']) %>
        <%= I18n.t('as_runcorn.sticky_significance_message') if form.obj['significance_is_sticky'] %>
      </div>
    </div>
  <% end %>
<% else %>
 <%= form.label_and_select "significance", form.possible_options_for("significance") %>
 <%= form.label_and_boolean "significance_is_sticky" %>
<% end %>

<% if form.readonly? %>
  <% if form['transfer'] %>
    <% tfr = form['transfer'] %>
    <div class="form-group">
      <div class="control-label col-sm-2"><%= I18n.t("archival_object.transfer") %></div>
      <div class="controls token-list col-sm-10">
        <%= render_token :object => tfr['_resolved'],
                           :label => tfr['_resolved']['display_string'],
                           :type => tfr['_resolved']['jsonmodel_type'],
                           :uri => tfr['ref'],
                           :placement => "top" %>
      </div>
    </div>
  <% end %>
<% end %>

<%= form.label_and_select "copyright_status", form.possible_options_for('copyright_status', true) %>
<%= form.label_and_date "original_registration_date" %>
